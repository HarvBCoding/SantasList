<article>
  <h2>
    Who's Been Naughty?
  </h2>
  <form class="edit-recipient-form">
    <div>
      <input name="recipient-name" type="text" value="{{rec.name}}" />
      <input name="recipient-relationship" , type="text" value="{{rec.relationship}}" />
    </div>
    <button type="submit">Save</button>
    <button type="button" class="delete-rec-btn">Delete</button>
  </form>

  <h2>
    Or Nice?
  </h2>
  <br>
  <form class="add-gift-form">
    <div>
      <h3>Add a Gift</h3>
      <input name="add-gift"  id= "add-gift" type="text" value="Gift Name"/>
      <input name="add-price" id= "add-price" type="text" value="Gift Price"/>
      <button type="submit" id="add-gift">Add</button>
    </div>
  </form>
  <br>
  <h3>Edit {{rec.name}}'s Current Gifts</h3>
  {{#each rec.gifts as |gift|}}
  <form class="edit-gift-form">
    <div>
      <input name="gift-name" type="text" value="{{gift.gift_name}}" />
      <input name="gift-price" type="number" value="{{gift.price}}" />
    </div>
    <button type="submit">Save</button>
    <button type="button" class="delete-gift-btn">Delete ðŸ—‘ </button>
  </form>
  {{/each}}

</article>

