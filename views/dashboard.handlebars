<section>
    <h2>Add a Name to Santa's List</h2>

    <form class="new-recipient-form">
        <div>
            <label for="recipient-name">Name</label>
            <input type="text" id="recipient-name" name="recipient-name" />
        </div>
        <div>
            <label for="rec-relationship">Relationship</label>
            <input id="rec-relationship" name="rec-relationship" />
        </div>
        <button type="submit" class="btn">Add</button>
    </form>
</section>

{{#if recipients.length}}
<section>
    <h2>Check Your List Twice</h2>
    <ul>
        {{#each recipients as |rec|}}
        <li>
            {{> list-info rec}}
            <a href='/dashboard/edit/{{id}}' class="edit-link">Edit</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}
